{
    "name": "react-reduckx",
    "version": "0.0.0-semantically-released",
    "description": "ðŸ¦† A lightweight Redux kit to manage state in React applications with ease ðŸ¦†",
    "main": "./lib/index.js",
    "repository": {
        "type": "git",
        "url": "https:git@github.com:phixo/react-reduckx.git"
    },
    "contributors": [
        "Maurice Bartnig <maurice.bartnig@gmail.com>"
    ],
    "license": "MIT",
    "keywords": [
        "react",
        "redux",
        "async",
        "hooks",
        "reducer",
        "functional",
        "toolkit"
    ],
    "unpkg": "dist/react-reduckx.js",
    "module": "es/index.js",
    "files": [
        "dist",
        "lib",
        "src",
        "es"
    ],
    "scripts": {
        "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib && cp LICENSE README.md ./lib",
        "build:es": "babel src --out-dir es",
        "build:umd": "cross-env NODE_ENV=development rollup -c -o dist/react-reduckx.js",
        "build:umd:min": "cross-env NODE_ENV=production rollup -c -o dist/react-reduckx.min.js",
        "build": "yarn run build:commonjs && yarn run build:es && yarn run build:umd && yarn run build:umd:min",
        "clean": "rimraf dist lib es coverage",
        "commit": "git-cz",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "semantic-release": "semantic-release",
        "test": "jest",
        "test:ci": "yarn run test && codecov",
        "watch:test": "jest --watchAll --coverage"
    },
    "peerDependencies": {
        "prop-types": "^15.7.2",
        "react": "^16.8.4",
        "react-dom": "^16.8.4"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.4",
        "@babel/preset-env": "^7.3.4",
        "@babel/preset-react": "^7.0.0",
        "axios": "^0.19.0",
        "axios-mock-adapter": "^1.16.0",
        "babel-eslint": "^10.0.1",
        "codecov": "^3.2.0",
        "cross-env": "^5.2.0",
        "cz-conventional-changelog": "^2.1.0",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.10.0",
        "eslint": "^6.0.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^5.0.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.4",
        "husky": "^2.0.0",
        "jest": "^24.1.0",
        "path-to-regexp": "^4.0.0",
        "prettier": "^1.16.4",
        "prop-types": "^15.7.2",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-hooks-testing-library": "^0.4.0",
        "react-test-renderer": "^16.8.3",
        "reselect": "^4.0.0",
        "rimraf": "^2.6.3",
        "rollup": "^1.11.0",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-commonjs": "^10.0.1",
        "rollup-plugin-node-resolve": "^5.0.0",
        "rollup-plugin-replace": "^2.1.0",
        "rollup-plugin-terser": "^5.0.0",
        "semantic-release": "^17.0.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "jest": {
        "cacheDirectory": "./node_modules/.jest-cache",
        "coverageDirectory": "./coverage/",
        "collectCoverage": true,
        "roots": [
            "<rootDir>/tests/"
        ],
        "testMatch": [
            "**/tests/**/*-test.js"
        ]
    }
}
